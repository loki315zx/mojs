@import '~imports.styl'

.mole-hand
  width             54*PX
  height            102*PX
  background        url('./i/mole-hand.svg') no-repeat center center
  border-radius     BRADIUS
  position          absolute
  nw                50%
  margin-left      -25*PX 
  margin-top       -50*PX
  transform-origin  center top

size = 4
.path-easing-rectangle
  rect          size*gs
  background    c-purple
  position      absolute
  top           4*gs
  left          50%
  margin-left  -(size/2)*gs
  border-radius BRADIUS
  
  &--quake
    top         50%
    margin-top -(size/2)*gs
    
  &--eased-quake
    top         2*gs