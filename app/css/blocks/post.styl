@import '../imports.styl'

{el = '.post'}
  color             c-white
  line-height       1.9
  &__header
    color           c-orange
    font-size       24*PX
    letter-spacing  2*PX
  &__description
    color           c-orange
    font-size       16*PX
    opacity         .5
    margin-top      .8*gs
  p
    // text-align      justify
    & + p
      margin-top    1*gs
    +mobile()
      line-height   1.5
      text-align    left
  ul
    margin          4*gs 0
    max-width       50*gs
  li
    list-style      none
    position        relative
    &:before
      content       'â€¢'
      position      absolute
      color         c-orange
      left         -2*gs
    & + li
      margin-top    gs
  h2
    color           c-orange
    margin          5*gs 0
    font-weight     normal
  em
    font-size       12*PX
  .easing-object-graph
    margin          5*gs 0

  &__orx-line
    margin          3.5*gs 0 3*gs
    +mobile()
      margin        1.5*gs 0 1*gs
  &__last-orx-line
    margin-top      9*gs
    margin-bottom   0
    max-width       40*gs
    fly()
    +mobile()
      margin-top     5*gs
  &__social-networks-about
    margin          9.5*gs auto 0
    +mobile()
      margin        6.5*gs auto 0
  &__comments
    margin-top      11*gs
    +mobile()
      margin-top    7*gs
  .post-image
    margin          5*gs auto
    +mobile()
      margin        3*gs auto
  .cite
    margin          5*gs auto 8*gs
    +mobile()
      margin        3*gs 0 6*gs
      line-height   1.5
  .code-sample
    margin          3.5*gs 0
    +mobile()
      margin        2.5*gs 0 3.5*gs
    
