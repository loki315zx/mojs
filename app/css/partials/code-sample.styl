@import '../imports.styl'

{el = '.code-sample'}
  &__syntax
    border                  2*PX solid c-purple-2
    border-bottom           0
    border-top-left-radius  BRADIUS
    border-top-right-radius BRADIUS
    position                relative
    height                  19.4*gs
    .line-numbers
      display               none
      &.is-show
        display             block
  &__buttons
    position                absolute
    z-index                 1
    right                   0
  buttonHeight = 3
  buttonWidth  = 5
  &__button
    text-align              center
    line-height             buttonHeight*gs
    float                   left
    cursor                  pointer
    color                   c-white-transparent
    height                  buttonHeight*gs
    width                   buttonWidth*gs
    font-size               14*PX
    &:hover,
    &.is-show
      background            c-purple-2
      color                 inherit
    &.is-show
      cursor                default
  &__code
    padding-top     2*gs
    padding-bottom  2.5*gs
    padding-left    2.5*gs
    background      rgba(c-purple, .6)
    font-size       15*PX
    .line-numbers-rows
      padding-top     2*gs
      padding-bottom  2*gs
      font-size       14*PX
      line-height     1.5
      background      c-purple-2
      > span
        opacity       .5
        margin-right  1.2*gs
  &__pen
    margin-left  - PX



    