@import '../imports.styl'

{el = '.easing-object'}
  rect            320*PX
  background      c-creamy-semi
  border-radius   BRADIUS
  position        relative
  
  &__label
    position          absolute
    left              50%
    bottom            1*gs
    transform         translateX(-50%)
    font-size         6*PX
    letter-spacing    PX
    background-color  c-white-transparent
    padding           0 4*PX PX
    border-radius     BRADIUS
  
.mole-hand
  width             50*PX
  height            100*PX
  background        c-white-transparent
  border-radius     BRADIUS
  position          absolute
  nw                50%
  margin-left      -25*PX 
  margin-top       -50*PX
  transform-origin  center top
  
  