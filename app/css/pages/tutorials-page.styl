@import '../imports'
@import '../blocks/motion-lettering'

sidebarWidth = 20
{el = '.tutorials-page'}
  // height        200*gs
  padding-left    7.5*gs
  padding-top     18.5*gs
  padding-bottom  14*gs
  overflow        hidden
  width           100%
  @media all and (max-width: 1150px)
    padding-left  3.5*gs
  @media all and (max-width: 1100px)
    padding-left  0
  @media all and (max-width: 900px)
    padding-left  4*gs
    padding-right 4*gs
  +mobile()
    padding-left  2*gs
    padding-right 2*gs
    padding-top   9*gs
    padding-bottom 5*gs
  &__content
    position      relative
    margin-left   sidebarWidth*gs
    @media all and (max-width: 1150px)
      margin-left (sidebarWidth - 3)*gs
    @media all and (max-width: 1100px)
      margin-left  0
  &__sidebar
    width         sidebarWidth*gs
    float         left
    min-height    100%
    @media all and (max-width: 1150px)
      width       (sidebarWidth + 1)*gs
    @media all and (max-width: 1100px)
      position      absolute
      z-index       10
      left          0
      padding-left  3.5*gs
      background    rgba(c-purple, .9)
      transform     translateX(-100%)
  .tutorials-sidebar
    fly()
  .post
    max-width     80*gs
    fly()
 