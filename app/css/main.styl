@import './imports'
@import './icons'
// @import './blocks/'
@import './pages/base-page'
@import './grid'
@import './highlight'

body
  overflow-x      hidden
  font-family     Century Gothic, sans-serif
  background      c-purple
  letter-spacing  PX

html, body
  margin      0
  padding     0
*
  box-sizing border-box
  
.touchable
  &:active
    transform translate(0, 2*PX)
  
// CLEARFIX
.cf:after,
.cf:before
  content ''
  display table
.cf:after
  clear both
.cf
  zoom 1