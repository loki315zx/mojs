@import './imports'
@import './icons'
// @import './blocks/'
@import './pages/base-page'
@import './grid'
@import './highlight'

body
  overflow-x      hidden
  font-family     Century Gothic, sans-serif
  background      c-purple
  letter-spacing  PX
a
  color c-orange

html, body
  margin      0
  padding     0
*
  box-sizing border-box
  
.touchable
  &:active
    transform   translate(0, 2*PX)
    &:after
      transform   translate(0, -2*PX)
  &:after
    content     ''
    position    absolute
    opacity     .5
    nw          -20%
    rect        140%
  &.is-disabled
    opacity     .2
    &:active
      transform   none
    &:after
      transform   none
  
// CLEARFIX
.cf:after,
.cf:before
  content ''
  display table
.cf:after
  clear both
.cf
  zoom 1